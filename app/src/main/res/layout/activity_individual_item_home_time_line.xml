<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id ="@+id/individual_item_home_timeline">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id ="@+id/iv_user_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_name"
        android:layout_toRightOf="@id/iv_user_image"
        android:layout_toEndOf="@id/iv_user_image"
        android:text="username"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_twitter_text"
        android:layout_below="@id/iv_user_image"
        android:text="twitter text"/>
</RelativeLayout>